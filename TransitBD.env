# Required Variables
NODE_ENV=development           # Options: development, production, test
PORT=3000                     # Port number for the server
MONGODB_URI=mongodb://localhost:27017/transitbd    # MongoDB connection string
REDIS_URL=redis://localhost:6379                   # Redis connection string
JWT_SECRET=your-super-secret-jwt-key              # JWT signing key
STRIPE_SECRET_KEY=sk_test_...                     # Stripe API key
OPENAI_API_KEY=sk-...                             # OpenAI API key

# Optional Payment Gateway Keys
BKASH_API_KEY=your-bkash-key                      # bKash payment gateway key
NAGAD_API_KEY=your-nagad-key                      # Nagad payment gateway key

# Optional External Services
WEATHER_API_KEY=your-weather-api-key              # Weather API key
REALTIME_WS_URL=wss://your-websocket-url         # WebSocket server URL
ML_MODEL_ENDPOINT=https://your-ml-endpoint        # Machine learning model endpoint

# Logging Configuration
LOG_LEVEL=info                # Options: error, warn, info, debug

# Application Defaults
DEFAULT_DIVISION=Dhaka        # Default division for location services
RATE_LIMIT_WINDOW=900000     # Rate limiting window in milliseconds (15 minutes)
RATE_LIMIT_MAX=100           # Maximum requests per window

# Cache Configuration
CACHE_TTL=3600               # Cache time-to-live in seconds (1 hour)
